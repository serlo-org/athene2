{% set user = normalize().toAnchor(event.getActor()) %}
{% set discussion %}
    <a href="{{ normalize().toUrl(event.getObject()) }}">
        {{ normalize().toPreview(event.getObject()) }}
    </a>
{% endset %}
{% set on = normalize().toAnchor(event.getParameter('on')) %}
{% trans %}
    {{ user }} started a new discussion {{ discussion }} on {{ on }}
{% endtrans %}