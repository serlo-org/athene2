$pagesCount = count($this->pages);
foreach ($this->pages as $i => $page) {
    $html = [];
    $html[] = '<li>';

    if ($i + 1 < $pagesCount && $page->isVisible()) {
        $html[] = '<a href="' . $this->alias($page->getHref()) . '">';
        $html[] = '<span>' . $page->getLabel() . '</span>';
        $html[] = '</a>';
    } else {
        $html[] = '<span>' . $page->getLabel() . '</span>';
    }

    $html[] = '</li>';

    echo join(' ', $html);
}

// Show custom breadcrumbs if there are no default breadcrumbs
if ($pagesCount === 0) {
    echo $this->placeholder('breadcrumbs');
}
